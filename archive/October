<body>
  <img id="logo" src="https://notdefinedbyfnd.github.io/FND-Games/logo.png" alt="FND Logo">
  <h1>üéØ Mind Maze: Attention Tracker</h1>
  <p>Tap the targets as they appear ‚Äî but avoid the distractors! Stay sharp and focused!</p>
  <div>
    <button onclick="startGame('easy')">Easy</button>
    <button onclick="startGame('medium')">Medium</button>
    <button onclick="startGame('hard')">Hard</button>
  </div>
  <div id="gameArea"></div>
  <div id="scoreDisplay">Score: 0</div>
  <div id="message"></div>

  <script>
    const gameArea = document.getElementById("gameArea");
    const scoreDisplay = document.getElementById("scoreDisplay");
    const message = document.getElementById("message");

    let score = 0;
    let gameInterval;
    let currentDifficulty = 'medium';

    const targets = ['ü¶É', 'üß†'];
    const distractors = ['üçí', '‚õÑ', 'üçÅ', 'üåü'];

    function getRandomPosition() {
      const x = Math.random() * 240;
      const y = Math.random() * 240;
      return { x, y };
    }

    function spawnItem() {
      const isTarget = Math.random() < 0.5;
      const item = document.createElement("div");
      const position = getRandomPosition();

      item.className = isTarget ? "target" : "distractor";
      item.textContent = isTarget ? randomFromArray(targets) : randomFromArray(distractors);

      item.style.left = position.x + "px";
      item.style.top = position.y + "px";

      item.onclick = () => {
        if (item.className === "target") {
          score++;
          message.textContent = "‚úÖ Great focus!";
        } else {
          score--;
          message.textContent = "‚ùå Oops! Stay sharp.";
        }
        scoreDisplay.textContent = `Score: ${score}`;
        item.remove();
      };

      gameArea.appendChild(item);

      setTimeout(() => item.remove(), 1500);
    }

    function startGame(difficulty) {
      clearInterval(gameInterval);
      gameArea.innerHTML = "";
      score = 0;
      scoreDisplay.textContent = "Score: 0";
      message.textContent = "";

      let speed = 1000;
      if (difficulty === 'easy') speed = 1300;
      if (difficulty === 'medium') speed = 1000;
      if (difficulty === 'hard') speed = 700;

      currentDifficulty = difficulty;
      gameInterval = setInterval(spawnItem, speed);

      setTimeout(() => {
        clearInterval(gameInterval);
        message.textContent = `Time's up! Final Score: ${score}`;
      }, 30000);
    }

    function randomFromArray(arr) {
      return arr[Math.floor(Math.random() * arr.length)];
    }
  </script>
</body>
